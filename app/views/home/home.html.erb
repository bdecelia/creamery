<% if logged_in? %>

	<% if current_user.role?(:admin) %>
	<%= render :partial => 'admin_home' %>
	<% end %>

	<% if current_user.role?(:manager) %>
	<%= render :partial => 'manager_home' %>
	<% end %>

	<% if current_user.role?(:employee) %>
	<%= render :partial => 'employee_home' %>
	<% end %>

<% else %>
	<%= render :partial => 'general_home' %>
<% end %>